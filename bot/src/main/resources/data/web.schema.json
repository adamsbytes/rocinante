{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://rocinante.bot/schemas/web.schema.json",
  "title": "Navigation Web Schema",
  "description": "Schema for OSRS navigation web data (nodes, edges, regions)",
  "type": "object",
  "required": ["version", "nodes", "edges"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$",
      "description": "Schema version (e.g., '1.0')"
    },
    "nodes": {
      "type": "array",
      "description": "Navigation nodes (locations)",
      "items": {"$ref": "#/definitions/node"}
    },
    "edges": {
      "type": "array",
      "description": "Navigation edges (connections between nodes)",
      "items": {"$ref": "#/definitions/edge"}
    },
    "regions": {
      "type": "array",
      "description": "Named regions for organization",
      "items": {"$ref": "#/definitions/region"}
    }
  },
  "definitions": {
    "node": {
      "type": "object",
      "required": ["id", "name", "x", "y", "plane", "type"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_]*$",
          "description": "Unique node identifier (snake_case)"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Human-readable node name"
        },
        "x": {
          "type": "integer",
          "minimum": 0,
          "maximum": 16383,
          "description": "World X coordinate"
        },
        "y": {
          "type": "integer",
          "minimum": 0,
          "maximum": 16383,
          "description": "World Y coordinate"
        },
        "plane": {
          "type": "integer",
          "minimum": 0,
          "maximum": 3,
          "description": "Z-plane (0=ground, 1-3=upper floors)"
        },
        "type": {
          "type": "string",
          "enum": ["BANK", "TELEPORT", "QUEST", "SLAYER", "GENERIC", "TRANSPORT", "SHOP", "TRAINING"],
          "description": "Node type classification"
        },
        "tags": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Searchable tags (e.g., 'f2p', 'safe', 'members')"
        },
        "metadata": {
          "type": "object",
          "additionalProperties": {"type": "string"},
          "description": "Additional key-value metadata"
        }
      }
    },
    "edge": {
      "type": "object",
      "required": ["from", "to", "type", "cost_ticks"],
      "properties": {
        "from": {
          "type": "string",
          "description": "Source node ID"
        },
        "to": {
          "type": "string",
          "description": "Destination node ID"
        },
        "type": {
          "type": "string",
          "enum": ["WALK", "TELEPORT", "TRANSPORT", "AGILITY", "QUEST_LOCKED", "DOOR", "STAIRS", "TOLL", "FREE_TELEPORT"],
          "description": "Edge type"
        },
        "cost_ticks": {
          "type": "integer",
          "minimum": 1,
          "description": "Traversal cost in game ticks"
        },
        "bidirectional": {
          "type": "boolean",
          "default": true,
          "description": "Whether edge can be traversed both ways"
        },
        "requirements": {
          "type": "array",
          "items": {"$ref": "#/definitions/requirement"},
          "description": "Requirements to use this edge"
        },
        "metadata": {
          "type": "object",
          "additionalProperties": {"type": "string"},
          "description": "Edge-specific metadata (e.g., spell_name, travel_type)"
        }
      }
    },
    "requirement": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["magic_level", "agility_level", "quest", "item", "runes", "skill", "combat_level", "ironman_restriction", "favour"],
          "description": "Requirement type"
        },
        "value": {
          "description": "Requirement value (type depends on requirement type)"
        },
        "skill": {
          "type": "string",
          "description": "Skill name for skill requirements"
        },
        "quest_name": {
          "type": "string",
          "description": "Quest name for quest requirements"
        },
        "item_id": {
          "type": "integer",
          "description": "Item ID for item requirements"
        },
        "item_ids": {
          "type": "array",
          "items": {"type": "integer"},
          "description": "Multiple item IDs (any one satisfies)"
        },
        "runes": {
            "type": "object",
          "additionalProperties": {"type": "integer"},
          "description": "Rune requirements (rune_name: count)"
        },
        "favour_house": {
          "type": "string",
          "description": "Kourend house for favour requirements"
        },
        "favour_percent": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Minimum favour percentage"
        }
      }
    },
    "region": {
      "type": "object",
      "required": ["id", "name", "node_ids"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_]*$",
          "description": "Unique region identifier"
        },
        "name": {
          "type": "string",
          "description": "Human-readable region name"
        },
        "node_ids": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Node IDs belonging to this region"
        },
        "bounds": {
          "type": "object",
          "properties": {
            "min_x": {"type": "integer"},
            "min_y": {"type": "integer"},
            "max_x": {"type": "integer"},
            "max_y": {"type": "integer"}
          },
          "description": "Optional bounding box"
        }
      }
    }
  }
}
