{
  "name": "rocinante-management",
  "version": "0.4.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:client\"",
    "dev:client": "vite",
    "dev:server": "bun --watch src/api/server.ts",
    "build": "vite build && bun build src/api/server.ts --outdir dist/api --target bun",
    "start": "bun dist/api/server.js"
  },
  "dependencies": {
    "@tanstack/solid-query": "^5.90.18",
    "@tanstack/solid-router": "^1.144.0",
    "dockerode": "^4.0.9",
    "solid-js": "^1.9.10",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/bun": "^1.3.5",
    "@types/dockerode": "^3.3.47",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-solid": "^2.11.10"
  }
}
